<div id="popup_wrapper">
  <div id="popup">
    <%= form_tag :action=>"invite_user" do %>
      <%= email_field_tag("email",nil,:placeholder=>"Enter Email",:required=>true) %>
      <%= submit_tag("Send Invite") %>
      <a id="invite_user_cancel">Cancel</a>
    <% end %>
  </div>
</div>
<div id="container">
  <div id="sidebar">
    <div id="metrics_button" class="menu_button">
      Metrics
    </div>
    <div id="reports_button" class="menu_button">
      Reports
    </div>
    <div id="settings_button" class="menu_button">
      Settings
    </div>
    <% if !!session[:is_admin] %>
      <div id="admin_button" class="menu_button">
        Admin
      </div>
    <% end %>
  </div>
  <div id="main">
    <div class="pane" id="metrics">
      <div id="metrics_container">
        <div id="monthly_sales" class="graph_container fullwidth">
          
        </div>
        <div id="market_share" class="graph_container thirdwidth left">
          
        </div>
        <div id="market" class="graph_container thirdwidth middle">
          
        </div>
        <div id="share" class="graph_container thirdwidth right">
          
        </div>
        <div class="graph_container halfwidth left">
          
        </div>
        <div class="graph_container halfwidth right">
          
        </div>
      </div>
    </div>
    <div class="pane" id="reports">
      <div id="r_button_container">
        <div id="CRM" class="app_button r_button">
          <%= image_tag("salesforce.png") %>
        </div>
        <div id="accounting" class="app_button r_button">
          <%= image_tag("quickbooks.png") %>
        </div>
        <div id="ecommerce" class="app_button r_button">
          <%= image_tag("stripe.png") %>
        </div>
      </div>
      
      <div id="CRM_pane" class="r_app_pane">
        <% SalesforceAccount.all.each do |account| %>
          <%= account.name %><br>
        <% end %>
      </div>
      <div id="marketing_pane" class="r_app_pane">
        
      </div>
      <div id="accounting_pane" class="r_app_pane">
        
      </div>
      <div id="support_pane" class="r_app_pane">
        
      </div>
      <div id="ecommerce_pane" class="r_app_pane">
        
      </div>
      
    </div>
    <div class="pane" id="settings">
      <div id="settings_container">
        <div id="profile_picture">
          <div class="edit_button">Edit</div>
          <img src="http://www.eataway.com/assets/img/profile-no-image.png">
        </div>
        <div id="profile_info">
          <h2><%= session[:name] %></h2>
          <h4>CEO</h4>
          <div class="edit_button">Edit</div>
          <h4><%= session[:org] %></h4>
          <div class="edit_button">Edit</div>
        </div>
      </div>
    </div>
    <% if !!session[:is_admin] %>
      <div class="pane" id="admin">
        <div id="admin_container">
          <h2>Applications</h2>
          <ul id="app_wrapper" class="wrapper">
            <li>
                <a href="#">
                  <%if @connected_to_salesforce%>
                      <p>Salesforce connected</p>
                  <%end%>
                <div id="a_CRM" class="app_button">
                    <%= image_tag("salesforce.png") %>
                </div>
              </a>
            </li>
            <li>
                <a href="#">
                  <%if @connected_to_quickbooks%>
                      <p>Quickbooks connected</p>
                  <%end%>
                <div id="a_accounting" class="app_button">
                    <%= image_tag("quickbooks.png") %>
                </div>
              </a>
            </li>
            <li>
                <a href="#">
                  <%if @connected_to_Stripe%>
                      <p>Stripe connected</p>
                  <%end%>
                <div id="a_ecommerce" class="app_button">
                    <%= image_tag("stripe.png") %>
                </div>
              </a>
            </li>
        </ul>
          <h2>Users</h2>
          <ul class="wrapper users_wrapper">
            <% User.where(org: @org).all.each do |u|%>
            <li>
              <div class="user_container">
                <p><%= u.name %></p>
                <div class="item user_item"></div>
              </div>
            </li>
            <% end %>
            </ul>
            <ul id="add_button" class="wrapper">
              <div class="user_container">
                <div class="item" id="invite_user">
                  <div class="plus">+</div>
                </div>
              </div>
            </ul>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>