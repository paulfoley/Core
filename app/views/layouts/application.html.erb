<!DOCTYPE html>
<html>
<head>
  <title>Core Cloud App</title>


  <%= stylesheet_link_tag '/stylesheets/core.css', media: 'all' %>
  <%= csrf_meta_tags %>
  <script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
  <script src="https://code.highcharts.com/highcharts.js"></script>

  <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
  <!-- HEADER -->
<div class="header">
  <a href="http://corecloudapp.com">
    <img class="header_icon" src="https://i.imgur.com/1b3nJn0.png" alt="core">
  </a>
  <% if flash[:success] %>
    <div class="notice success"><%= flash[:success] %></div>
  <% end %>
  <% if flash[:failure] %>
    <div class="notice failure"><%= flash[:failure] %></div>
  <% end %>
  <% if current_page?(controller:'core', action:'run') %>
    <div id="logout">
      <%= link_to "Log Out", :controller=>'core',:action=>'logout' %>
    </div>
  <% end %>
</div>
<%= yield %>
<%= include_gon %>
<%= javascript_include_tag 'application' %>

</body>
</html>